<Page
    x:Class="SensorApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SensorApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Name="MainGrid">
        <Grid.Background>
            <ImageBrush ImageSource="/../Assets/MyImages/screenshot3.png" />
        </Grid.Background>
        <StackPanel HorizontalAlignment="Center">
            <TextBlock Text="AirplaneSimulator" Style="{StaticResource TextAirport}" />
            <StackPanel Style="{StaticResource ButtonPanel}">
                <Button Style="{StaticResource ButtonMain}" Name="FlyButton" Click="FlyButton_Click" Content="New game"></Button>
                <Button Style="{StaticResource ButtonMain}" Name="LoadButton" Click="FlyButton_Click" Content="Load game"></Button>
                <Button Style="{StaticResource ButtonMain}" Name="SettingsButton" Click="FlyButton_Click" Content="Settings"></Button>
                <Button Style="{StaticResource ButtonMain}" Name="ExitButton" Click="FlyButton_Click" Content="Exit"></Button>
            </StackPanel>
        </StackPanel>

        <Button Name="TestButton" Click="TestButton_OnClick" Content="Test" HorizontalAlignment="Left" VerticalAlignment="Bottom" Background="Magenta"></Button>
    </Grid>
</Page>